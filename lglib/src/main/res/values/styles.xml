<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="BaseAppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <!-- Customize your theme here. -->
        <!-- API 19 theme customizations can go here. -->
        <!--<item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>
    <style name="ActivityTheme" parent="BaseAppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparency</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="myDialogAnim" parent="android:Animation">

        <!-- 杩涘叆鏃剁殑鍔ㄧ敾 -->
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <!-- 閫�嚭鏃剁殑鍔ㄧ敾 -->
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="editText">
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <!--<item name="android:ellipsize">end</item>-->
        <item name="android:textSize">16sp</item>
    </style>
    <!--对话框style-->
    <style name="alertDialogView" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/alert_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
